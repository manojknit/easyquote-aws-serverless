        <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="panel panel-default">
                  <div class="panel-heading"><h3 class="panel-title">Add Quote</h3></div>
                  <div class="panel-body">
<!-- Create template-->
                    <form class="form-group" {{action "createItem" on="submit"}}>
                          <div class="form-group">
                            <label class="sr-only">New Quote</label>


          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=quote_name id='quote_name' class="form-control" placeholder="Quote Description" required="required"}}
                            </div>
          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=customer id='customer' class="form-control" placeholder="Customer" }}
                            </div>
          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=product_to_buy id='product_to_buy' class="form-control" placeholder="Product" }}
                            </div>
          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=product_requested_price id='product_requested_price' class="form-control" placeholder="Requested Price $" }}
                            </div>
          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=valid_from id='valid_from' class="form-control" placeholder="valid from" }}
                            </div>
          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=valid_to id='valid_to' class="form-control" placeholder="valid to" }}
                            </div>
          <div class="input-group">
                              <div class="input-group-addon"><i class="glyphicon glyphicon-star"></i></div>
                              {{input value=comment id='comment' class="form-control" placeholder="Comment" }}
                            </div>

                          </div>
                          <div>

                            <button type="submit" class="btn btn-primary" aria-label="Left Align">
                              <span class="glyphicon glyphicon-save-file"  style="color:azure" aria-hidden="true"></span>Submit Quote
                            </button>

                          </div>
                          <div class="alert alert-success fade in hidden" id="dvmessage">
                              <a href="#" class="close" data-dismiss="alert">&times;</a>
                              <strong>Success!</strong> Your Quote is submitted successfully.
                          </div>
                        </form>
<!-- Display template-->
</div>
</div>
</div>
