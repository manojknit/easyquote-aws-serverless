{{outlet}}

<nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        Ember Serverless
      </a>
    </div>

    <div class="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
      	<li>
      		<a {{ action "logout" }} href="javascript:void(null)">Logout</a>
      	</li>
      </ul>
    </div>

  </div>
</nav>

<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<div class="panel panel-default">
		  <div class="panel-heading"><h3 class="panel-title">JWT Decoded</h3></div>
		  <div class="panel-body">
		  <ul>
		  	{{#each-in jwt as |key val|}}
		  		<li><strong>{{key}}</strong>  {{ val }}</li>
		  	{{/each-in}}
		  </ul>
		  </div>
		</div>
	</div>
	<div class="col-xs-12 col-sm-12 col-md-12">
		<div class="panel panel-default">
		  <div class="panel-heading"><h3 class="panel-title">Dynamo Items</h3></div>
		  <div class="panel-body">
		    
		    <form class="form-inline" {{action "createItem" on="submit"}}>
			  <div class="form-group">
			    <label class="sr-only">New Item</label>
			    <div class="input-group">
			      <div class="input-group-addon"><i class="glyphicon glyphicon-save-file"></i></div>
			      {{input value=item id='content' class="form-control" placeholder="Content" required="required"}}
			    </div>
			  </div>
			  <button type="submit" class="btn btn-primary">Create Item</button>
			</form>

			<hr/>

			<ul class="list-group">
  				{{#each model.docs as |item|}}
  					<li class="list-group-item">
  						{{ item.content }} <br/>
  						<small>{{ item.id }}</small>
  						<span class="pull-right">
  							<a class="btn btn-info btn-xs" href="javascript:void(null)" {{ action "removeItem" item.id }} title="Remove Item">
  								<i class="glyphicon glyphicon-remove"></i>
							</a>
  						</span>
					</li>
  				{{/each}}
  			</ul>
		  </div>
		</div>
	</div>
</div>